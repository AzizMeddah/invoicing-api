<!DOCTYPE html>
<html lang="en">

<head>
    <!-- require stylesheet : bootstrap.css -->
    <link rel="stylesheet" href="bootstrap.css">
    <!-- require stylesheet : printings.css -->
    <link rel="stylesheet" href="printings.css">
    <!-- require stylesheet : template1.css -->
    <link rel="stylesheet" href="template1.css">
</head>

<body>
    <header class="clearfix">
                <% if (logo) { %>
            <div id="logo">
                <img src="<%= logo %>">
            </div>
            <% } %>
        <h1 id="document-type">
            <%= meta.type %> N° <%= invoice.sequential %>
        </h1>
        <div id="company" class="clearfix">
            <div>
                <%= invoice.cabinet.enterpriseName %>
            </div>
            <div>
                <%= invoice.cabinet.address.address %>,<br />
                    <%= invoice.cabinet.address.zipcode %>
                        <%= invoice.cabinet.address.region %>, <%= invoice.cabinet.address.country.alpha2code %>
            </div>
            <div>
                <%= invoice.cabinet.phone %>
            </div>
            <div><a href="<%= invoice.cabinet.email %>">
                    <%= invoice.cabinet.email %>
                </a></div>
        </div>
        <div id="project">
            <div><span>CLIENT</span>
                <%= invoice.firm.name %>
            </div>
            <% if (meta.showDeliveryAddress ) { %>
                <div><span>ADRESSE DE LIVRAISON</span><br>
                    <%= invoice.firm.deliveryAddress.address %>,<%= invoice.firm.deliveryAddress.zipcode %>
                            <%= invoice.firm.deliveryAddress.region %>,
                                <%= invoice.firm.deliveryAddress.country.alpha2code %>
                </div>
                <% } %>
                    <% if (meta.showInvoiceAddress ) { %>
                        <div><span>ADRESSE DE FACTURATION</span><br>
                            <%= invoice.firm.invoicingAddress.address %>, <%= invoice.firm.invoicingAddress.zipcode
                                    %>
                                    <%= invoice.firm.invoicingAddress.region %>,
                                        <%= invoice.firm.invoicingAddress.country.alpha2code %>
                        </div>
                        <% } %>
                            <div><span>DATE</span>
                                <%= invoice.date %>
                            </div>
                            <div><span>ÉCHÉANCE</span>
                                <%= invoice.dueDate %>
                            </div>
                            <div><span>OBJET</span>
                                <%= invoice.object %>
                            </div>
        </div>
    </header>
    <main>
        <table class="table table-striped" cellspacing="0" cellpadding="0">
            <thead>
                <tr>
                    <th style="width: 5%;">#</th>
                    <th style="width: 10%;">Nom</th>
                    <th style="width: 15%;">Description</th>
                    <th style="width: 10%;">Quantité</th>
                    <th style="width: 10%;">P.U</th>
                    <th style="width: 10%;">Remise</th>
                    <th style="width: 10%;">HT</th>
                    <th style="width: 20%;">Taxes</th>
                    <th style="width: 10%;">TTC</th>
                </tr>
            </thead>
            <tbody>
                <% let counter=1; %>
                    <% invoice.articleInvoiceEntries.forEach(function(entry) { %>
                        <tr>
                            <td class="no"># <%= counter %>
                            </td>
                            <td>
                                <%= entry.article.title %>
                            </td>
                            <td>
                                <%= entry.article.description %>
                            </td>
                            <td>
                                <%= entry.quantity %>
                            </td>
                            <td>
                                <%= entry.unit_price %>
                                    <%= invoice.currency.symbol %>
                            </td>
                            <td>
                                <%= entry.discount %>
                                    <% if (entry.discount_type=="PERCENTAGE" ) { %>
                                        <span>%</span>
                                        <% } else { %>
                                            <span>
                                                <%= invoice.currency.symbol %>
                                            </span>
                                            <% } %>
                            </td>
                            <td>
                                <%= entry.subTotal %>
                                    <%= invoice.currency.symbol %>
                            </td>

                            <td>
                                <% if (entry.articleInvoiceEntryTaxes.length> 0) { %>
                                    <ul>
                                        <% entry.articleInvoiceEntryTaxes.forEach(function(taxEntry) { %>

                                            <li>
                                                <%= taxEntry.tax.label %>
                                                    (<%= taxEntry.tax.rate * 100 %> %)
                                            </li>

                                            <% }); %>
                                    </ul>
                                    <% } else { %>
                                        <span>
                                            Aucune taxe applicable
                                        </span>
                                        <% } %>
                            </td>
                            <td>
                                <%= entry.total %>
                                    <%= invoice.currency.symbol %>
                            </td>
                        </tr>
                        <% counter++; %>
                            <% }); %>
            </tbody>
        </table>
        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-6">
                    <table class="table no-page-break">
                        <tr>
                            <td colspan="8">Total HT</td>
                            <td class="total">
                                <%= invoice.subTotal %>
                                    <%= invoice.currency.symbol %>
                            </td>
                        </tr>
                        <% invoice.taxSummary.forEach(function(tax) { %>
                            <tr>
                                <td colspan="8">
                                    <%= tax.label %> (<%= tax.rate %> %)
                                </td>
                                <td class="total">
                                    <%= tax.amount.toFixed(invoice.currency.digitAfterComma) %>
                                        <%= invoice.currency.symbol %>
                                </td>
                            </tr>
                            <% }) %>

                                <tr>
                                    <td colspan="8">Remise</td>
                                    <td class="total">
                                        <%= invoice.discount %>
                                            <% if (invoice.discount_type=="PERCENTAGE" ) { %>
                                                %
                                                <% } else { %>
                                                    <%= invoice.currency.symbol %>
                                                        <% } %>
                                    </td>
                                </tr>
                                <tr>
                                    <% if (invoice.taxStamp) { %>
                                <tr>
                                    <td colspan="8">Timbre Fiscale</td>
                                    <td class="text-right">
                                        <%= invoice.taxStamp %>
                                            <%= invoice.currency.symbol %>
                                    </td>
                                </tr>
                                <% } %>
                                    <td colspan="8" class="grand total">Montant à payer</td>
                                    <td class="grand total">
                                        <%= invoice.total %>
                                            <%= invoice.currency.symbol %>
                                    </td>
                                    </tr>
                    </table>
                </div>
            </div>
        </div>


        <div class="row mt-5 no-page-break">
            <div id="notices" class="col-8">
                <div>Conditions Générales:</div>
                <div class="notice">
                    <%= invoice.generalConditions %>
                </div>
            </div>

                <% if (signature) { %>
                <img src="<%= signature %>" id="signature">
                <% }else { %>
                    <div class="col-4 border h-10 text-center" id="signature">
                        <strong>Cachet & Signature</strong>
                    </div>
                    <% } %>

        </div>
    </main>
    <footer>
    </footer>
</body>

</html>